# MTN MOMO Credentials
# Get these from: https://momodeveloper.mtn.com
MOMO_SUBSCRIPTION_KEY=your_subscription_key_here
MOMO_API_USER=your_api_user_here
MOMO_API_KEY=your_api_key_here

# MTN MOMO Environment
# Options: 'sandbox' (testing) or 'production' (live)
MOMO_ENVIRONMENT=sandbox
MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com

# Timeouts (in milliseconds)
MOMO_TOKEN_TIMEOUT=3600
MOMO_REQUEST_TIMEOUT=30000

# =============================================
# MOMO SERVICE CONFIGURATION
# =============================================

# Frontend MOMO settings
VITE_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
VITE_MOMO_SUBSCRIPTION_KEY=your_subscription_key_here
